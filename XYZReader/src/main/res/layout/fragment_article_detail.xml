<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ArticleDetailCardViewAppearance" >

                <com.example.xyzreader.util.MaxWidthLinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/detail_card_max_width"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/article_byline"
                        style="?android:attr/textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/secondaryTextColor" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="1dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/secondaryTextColor"/>

                    <View
                        android:layout_width="30dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="72dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/article_body"
                        style="?android:attr/textAppearanceMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/detail_inner_horiz_margin"
                        android:layout_marginEnd="@dimen/detail_inner_horiz_margin"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="@dimen/detail_body_bottom_margin"
                        android:textColor="@color/primaryTextColor"
                        android:textColorLink="@color/colorAccent"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier" />

                </com.example.xyzreader.util.MaxWidthLinearLayout>

            </android.support.v7.widget.CardView>

</LinearLayout>